<UserControl x:Class="HRMS.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F4F6F8">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Text="HRMS Dashboard"
                       FontSize="32"
                       FontWeight="Bold"
                       Margin="0 0 0 20"/>

            <!-- Action Tiles -->
            <WrapPanel Grid.Row="1"
                       ItemWidth="220"
                       ItemHeight="140"
                       Orientation="Horizontal"
                       Margin="0 20 0 0">

                <!-- Employees -->
                <Button Command="{Binding NavigateToEmployeesCommand}"
                        Margin="10"
                        Padding="10"
                        Background="White"
                        BorderBrush="#D5D8DC"
                        BorderThickness="1">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Employees" FontSize="20" FontWeight="SemiBold"/>
                        <TextBlock Text="Manage employee records"
                                   FontSize="12"
                                   Foreground="Gray"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Button>

                <!-- Departments -->
                <Button Command="{Binding NavigateToDepartmentsCommand}"
                        Margin="10"
                        Padding="10"
                        Background="White"
                        BorderBrush="#D5D8DC"
                        BorderThickness="1">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Departments" FontSize="20" FontWeight="SemiBold"/>
                        <TextBlock Text="Manage department info"
                                   FontSize="12"
                                   Foreground="Gray"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Button>

                <!-- Attendance -->
                <Button Command="{Binding NavigateToAttendanceCommand}"
                        Margin="10"
                        Padding="10"
                        Background="White"
                        BorderBrush="#D5D8DC"
                        BorderThickness="1">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Attendance"
                                   FontSize="20" FontWeight="SemiBold"/>
                        <TextBlock Text="Track employee attendance"
                                   FontSize="12"
                                   Foreground="Gray"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Button>

                <!-- Payroll -->
                <Button Command="{Binding NavigateToPayrollCommand}"
                        Margin="10"
                        Padding="10"
                        Background="White"
                        BorderBrush="#D5D8DC"
                        BorderThickness="1">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Payroll"
                                   FontSize="20"
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="Salary processing"
                                   FontSize="12"
                                   Foreground="Gray"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Button>

            </WrapPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
